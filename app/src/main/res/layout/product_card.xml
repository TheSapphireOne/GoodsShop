<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_cardView"
    card_view:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_marginBottom="6dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

            <ImageView
                android:layout_width="@dimen/card_height"
                android:layout_height="@dimen/card_height"
                android:id="@+id/product_card_imgView"
                card_view:srcCompat="@drawable/milk"
                android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/content_card_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/product_card_imgView"
            android:layout_alignParentTop="true"
            android:paddingStart="6dp"
            android:layout_above="@+id/btnRow_card_relativeLayout">

            <lu.domi.sapphire.goodsshop.view.HeaderTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/sz_title_card"
                android:id="@+id/productTitle_card_textView" />

            <lu.domi.sapphire.goodsshop.view.ContentTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sz_content_card"
                android:gravity="top"
                android:id="@+id/productPrice_card_textView"
                android:layout_marginBottom="3dp"
                android:layout_below="@+id/productTitle_card_textView"
                android:layout_alignParentBottom="true" />

            <lu.domi.sapphire.goodsshop.view.ContentTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sz_content_card"
                android:gravity="top"
                android:id="@+id/productInfo_card_textView"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="3dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/productPrice_card_textView"
                android:layout_below="@+id/productTitle_card_textView" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_btn_row_height"
            android:id="@+id/btnRow_card_relativeLayout"
            android:layout_alignParentBottom="true"
            android:background="@drawable/square_frame"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/product_card_imgView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minEms="1"
                android:text="0"
                android:textSize="@dimen/sz_content_card"
                android:gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/quantity_card_editText"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="@dimen/card_btn_row_height"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_white_48px"
                android:background="@color/clear"
                android:padding="2dp"
                android:id="@+id/add_card_imgButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="@dimen/card_btn_row_height"
                android:layout_height="match_parent"
                android:src="@drawable/ic_remove_white_48px"
                android:background="@color/clear"
                android:padding="2dp"
                android:id="@+id/remove_card_imgButton"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
